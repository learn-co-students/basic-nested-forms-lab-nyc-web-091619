<%= form_for @recipe do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>

  <%= f.fields_for :ingredients do |ing| %>
    <br><br>
    <%= ing.label :name %>
    <%= ing.text_field :name %>
    <%= ing.label :quantity %>
    <%= ing.number_field :quantity %>
  <% end %>
  <br><br>
  <%= f.submit %>
<% end %>