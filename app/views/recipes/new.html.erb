<%= form_for @recipe do |f| %>

    <%= f.label :title, "Recipe title" %>
    <%= f.text_field :title %> <br> <br>

    <%= f.fields_for :ingredients do |ing| %>
        <%= ing.label :name, "name"%>
        <%= ing.text_field :name %>
        <%= ing.label :quantity, "quantity" %>
        <%= ing.text_field :quantity %>
    <% end %>
    <%= f.submit "Create Recipe"%>
<% end %>
